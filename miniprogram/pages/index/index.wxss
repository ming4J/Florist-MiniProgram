/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.swiper image {
  width: 100%;
  height: auto;
}
.scroll-x{
  
    height:220px;
    white-space:nowrap;
    display:flex;
}
/* 隐藏scrollbar */
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}
.view-parent{
    display:inline-block;
}
.item-image{
   width: 175px;
   height: 160px;
   display:flex;
   border-top-left-radius:5px;
   border-top-right-radius:5px;
   position:absolute;
   top:0;
}
.item-button{
  position: absolute; bottom: 5px; right: 10px;
}
.item-name{
  position:absolute;
  color:#0d0d0d;
  bottom:15px;
  padding:5px;
  margin:5px,10px
}
.item-price{
  position:absolute;
  color:#ff0000;
  bottom:0px;
  padding:5px;
  margin:10px,10px
}

.view-item {
    position:relative;
    box-shadow: 5px 5px 5px #888888;
    width:175px;
    height:200px;
    display:flex;
    font-size:12px;
    border-radius:5px;
    background:#ffffff;
    margin:10px;
}
